project Testbed is

   for Main use ("testbed.adb");
   for Source_Dirs use (".", "../test-common");
   for Object_Dir use ".build";
   for Exec_Dir use ".";
   for Target use "arm-eabi";
   for Runtime ("ada") use project'Project_Dir & "../local/arduino-due";

   package Builder is
      for Global_Compilation_Switches ("ada") use
        (
         "-g",
         "-O0",
         "-ffunction-sections",
         "-fdata-sections"
        );
      for Switches ("ada") use ("--create-map-file");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use
        (
         "-gnatqQafoy",
         "-gnatwaL.X"
        );
   end Compiler;

   package Linker is
      for Default_Switches ("ada") use ("-Wl,-gc-sections");
      for Map_File_Option use "-Wl,-Map," & project'Project_Dir;
   end Linker;

   package IDE is
      for Connection_Tool use "gdbserver-sam3x8e";
      for Program_Host use "*:2331";  -- using Segger j-link
      for Communication_Protocol use "remote";
   end IDE;

end Testbed;
